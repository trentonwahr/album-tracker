<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/albums/forms.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/albums" method="POST">
    <label for="name-input">Name:</label>
    <input type="text" name="name" id="name-input" autocomplete="off">
    <label for="artist-input">Artist:</label>
    <input type="text" name="artist" id="artist-input" autocomplete="off">
    <label for="release-year-input">Release Year:</label>
    <input type="text" name="releaseYear" id="release-year-input" autocomplete="off">
    <label for="genre-input">Genre:</label>
    <input type="text" name="genre" id="genre-input" autocomplete="off">
    <button type="submit">Add Album</button>
  </form>
</main>

<%- include('../partials/footer') %>